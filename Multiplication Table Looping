******** This code right here, allows you to input a number between 1 - 10 and it prints out a a table of multiplication factors up to a power of 10.




using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Ex9
{
    class Program
    {
        static void Main(string[] args)
        {

            double x = 1;
            string inputString;
            double num;

            System.Console.WriteLine("Insert a Number to see its Multiplication up o 10");
            inputString = System.Console.ReadLine();
            num = Convert.ToDouble(inputString);
            while (x <= 10)
            {
                if (x <= 10)
                {
                    System.Console.WriteLine("{0} * {1} = {2}", num, x, (num * x));
                    x++;
                }
            }


        }
    }
}
